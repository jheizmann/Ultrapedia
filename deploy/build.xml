<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="Ultrapedia">
	<target name="build">
		<delete dir="bin/zip" />
		<delete file="bin/smwhalo-ultrapedia-${version}.zip" />
		<mkdir dir="bin/zip" />

		<copy todir="bin/zip/extensions/Ultrapedia/includes">
			<fileset dir="../includes/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/Ultrapedia/languages">
			<fileset dir="../languages/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/Ultrapedia/scripts">
			<fileset dir="../scripts/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/Ultrapedia/">
			<fileset file="../*">
				<exclude name="**/.svn, **/CVS" />
				<exclude name="**/*deploy*" />
			</fileset>
		</copy>
		<zip destfile="bin/smwhalo-ultrapedia-${version}.zip" basedir="bin/zip" />
		<delete dir="bin/zip" />
	</target>
</project>
